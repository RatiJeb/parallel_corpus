<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="flex justify-center">
      <%= render 'shared/logo_md' %>
    </div>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= t('sessions.please_log_in') %></h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "pace-y-6") do |f| %>
        <div>
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900"><%= t('sessions.email') %></label>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-oceanside-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium leading-6 text-gray-900"><%= t('sessions.password') %></label>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-oceanside-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-4 mb-4 flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-mountbatten-500 focus:ring-oceanside-500" %>
              <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900"><%= t('sessions.remember_me') %></label>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit t('buttons.log_in'), data: { turbo: false }, class: "flex w-full justify-center rounded-md bg-mountbatten-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-mountbatten-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-mountbatten-500" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

  </div>
</div>
