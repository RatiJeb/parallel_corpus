<div class="flex flex-1 justify-between sm:hidden">
  <%= link_to t('advanced_search.previous'), url_method.call(**paging_params.merge(page: records.prev_page)), class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
  <%= link_to t('advanced_search.next'), url_method.call(**paging_params.merge(page: records.next_page)), class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
</div>
<div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
  <div>
    <p class="text-sm text-gray-700">
      <%= t('advanced_search.displayed') %>
      <span class="font-medium">
        <%= (records.current_page - 1) * records.limit_value + 1 %>
      </span>
      -
      <span class="font-medium">
        <%= [records.current_page * records.limit_value, records.total_count].min %>
      </span> <%= t('advanced_search.records') %>
      <span class="font-medium">
        <%= records.total_count %>
      </span>
      <%= t('advanced_search.from_records') %>
    </p>
  </div>
  <div>
    <nav class="isolate inline-flex -space-x-px rounded-md" aria-label="Pagination">

      <% if records.prev_page %>
        <%= link_to url_method.call(**paging_params.merge(page: records.prev_page)), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" do %>
          <span class="sr-only">Previous</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>

      <%= page_link(records.current_page, records.total_pages, url_method, paging_params, records) %>

      <!-- Current: "z-10 bg-indigo-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", Default: "text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-offset-0" -->
      <% if records.next_page %>
        <%= link_to url_method.call(**paging_params.merge(page: records.next_page)), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" do %>
          <span class="sr-only">Next</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>
    </nav>
  </div>
</div>
