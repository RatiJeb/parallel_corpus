            <div class="ml-3 bg-gray-100 px-3 rounded-md ring-2 ring-gray-500" data-controller="tag-term" data-tag-term-url-value="<%= tag_term_admin_text_block_path(id: en_block.id) %>" data-tag-term-redirect-url-value="<%= edit_multiple_admin_text_blocks_path(collection_id: @collection.id) %>">

