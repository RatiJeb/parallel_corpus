          <div>
            <div class="grid grid-flow-col space-x-2 justify-items-start">
              <div class="inline-flex">
                <%= form_for @search, url: edit_multiple_admin_text_blocks_path(collection_id: @collection.id), method: :get do |form| %>
                  <%= form.hidden_field :collection_id, name: :collection_id %>
                  <%= form.text_field :order_number, name: :order_number, placeholder: "Search by ID", class: "max-w-[120px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-3xl focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500" %>
                <% end %>
              </div>
              <div class="inline-flex">
