<%= render 'admin/shared/heading', name: 'ტექსტური წყვილების რედაქტირება' %>

<main data-controller="scroll-to" data-scroll-to-anchor-value="<%= @anchored_block.present? ? "text-block-#{@anchored_block.id}" : nil %>">
  <div class="mx-auto max-w-screen-2xl sm:px-6 lg:px-8">
    <% crumbs = [] %>
    <% crumbs << { name: @collection.supergroup.name_ka, url: admin_groups_path(supergroup_id: @collection.supergroup.id) } %>
    <% crumbs << { name: @collection.group.name_ka, url: admin_collections_path(group_id: @collection.group.id) } %>
    <% crumbs << { name: @collection.name_ka, url: admin_text_blocks_path(collection_id: @collection.id) } %>

    <%= render 'admin/shared/breadcrumbs', crumbs: crumbs unless crumbs.empty? %>

    <div class="mt-8 flex grid grid-flow-col space-x-4 justify-between">
      <%= link_to export_admin_text_blocks_path(collection_id: @collection.id, format: :xlsx), 'data-controller': "tooltip", 'data-tooltip-target': "cell", 'data-tooltip-placement-value': "top", class: "px-3 py-2 grid grid-flow-col space-x-1 inline-flex justify-center items-center text-sm bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900" do %>
        <div class="inline-flex">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
          </svg>
        </div>
        <div class="inline-flex">
          .xlsx
          <%= render 'admin/shared/tooltip', text: 'ტექსტური წყვილების ექსელის ფაილად ჩამოწერა' %>
        </div>
      <% end %>
    </div>

    <div class="sticky -top-0.5 py-2 z-20 mt-5 flex justify-stretch grid grid-cols-2 grid-flow-col max-w-screen-2xl rounded-lg backdrop-blur backdrop-filter">
      <div class="mr-3 col-span-1 space-y-3 sm:space-y-4">
        <div class="flex justify-between grid grid-flow-col w-full">
          <div>
            <div class="grid grid-flow-col space-x-2 justify-items-start">
              <div class="inline-flex">
                <%= form_for @search, url: edit_multiple_admin_text_blocks_path(collection_id: @collection.id), method: :get do |form| %>
                  <%= form.hidden_field :collection_id, name: :collection_id %>
                  <%= form.text_field :order_number, name: :order_number, placeholder: "ID-თი ძიება", class: "max-w-[120px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-3xl focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500" %>
                <% end %>
              </div>
              <div class="inline-flex">
                <%= form_for @search, url: edit_multiple_admin_text_blocks_path(collection_id: @collection.id), method: :get do |form| %>
                  <%= form.hidden_field :collection_id, name: :collection_id %>
                  <%= form.text_field :original_contents, name: :original_contents, placeholder: "ტექსტით ძიება", class: "max-w-[180px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-3xl focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="flex items-center">
            <div class="grid grid-flow-col items-end">
              <%= link_to export_admin_text_blocks_path(collection_id: @collection.id, language: :ka, format: :docx), 'data-controller': "tooltip", 'data-tooltip-target': "cell", 'data-tooltip-placement-value': "top", class: "ml-2 px-3 py-2 grid grid-flow-col space-x-1 inline-flex justify-center items-center text-sm bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900" do %>
                <div class="inline-flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
                  </svg>
                </div>
                <div class="inline-flex">
                  ka.docx
                  <%= render 'admin/shared/tooltip', text: 'ქართული ტექსტის ვორდის ფაილად ჩამოწერა' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="ml-3 col-span-1 space-y-3 sm:space-y-4">
        <div class="flex justify-between grid grid-flow-col w-full">
          <div>
            <div class="grid grid-flow-col space-x-2 justify-items-start">
              <div class="inline-flex">
                <%= form_for @search, url: edit_multiple_admin_text_blocks_path(collection_id: @collection.id), method: :get do |form| %>
                  <%= form.hidden_field :collection_id, name: :collection_id %>
                  <%= form.text_field :order_number, name: :order_number, placeholder: "Search by ID", class: "max-w-[120px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-3xl focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500" %>
                <% end %>
              </div>
              <div class="inline-flex">
                <%= form_for @search, url: edit_multiple_admin_text_blocks_path(collection_id: @collection.id), method: :get do |form| %>
                  <%= form.hidden_field :collection_id, name: :collection_id %>
                  <%= form.text_field :translation_contents, name: :translation_contents, placeholder: "Search by text", class: "max-w-[180px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-3xl focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="grid grid-flow-col space-x-2 justify-items-end">
            <div class="inline-flex items-center">
              <div class="grid grid-flow-col items-end">
                <%= link_to export_admin_text_blocks_path(collection_id: @collection.id, language: :en, format: :docx), 'data-controller': "tooltip", 'data-tooltip-target': "cell", 'data-tooltip-placement-value': "top",  class: "ml-2 px-3 py-2 grid grid-flow-col space-x-1 inline-flex justify-center items-center text-sm bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900" do %>
                  <div class="inline-flex">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
                    </svg>
                  </div>
                  <div class="inline-flex">
                    en.docx
                    <%= render 'admin/shared/tooltip', text: 'ინგლისური ტექსტის ვორდის ფაილად ჩამოწერა' %>
                  </div>
                <% end %>
              </div>
            </div>
            <div data-controller="update-multiple" class="inline-flex">
              <button type="button"
                      data-action="click->update-multiple#trigger"
                      class="inline-flex justify-center rounded-md bg-mountbatten-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-mountbatten-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-mountbatten-500">ყველას შენახვა</button>
            </div>
          </div>
        </div>
      </div>
    </div>


    <% @text_blocks.group_by(&:order_number).each do |order_number, block_group| %>
      <div class="mt-3 flex justify-stretch grid grid-cols-2 grid-flow-col max-w-screen-2xl">
        <% ka_block = block_group.detect(&:ka?) %>
        <%= render partial: 'edit_card', locals: { block: ka_block, language: 'ka', new_id: nil, order_number: } %>

        <% en_block = block_group.detect(&:en?) %>
        <%= render partial: 'edit_card', locals: { block: en_block, language: 'en', new_id: nil, order_number: } %>
      </div>
    <% end %>

    </div>

    <%= render 'admin/shared/confirm_delete_modal', modal_title: 'გსურთ ტექსტური ბლოკის წაშლა?',
                                                    modal_text: 'ეს ტექტური ბლოკი წაიშლება სრულად' %>

  </div>
</main>
