                          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        <%= render 'admin/shared/tooltip', text: 'ბლოკის წაშლა' %>
                      </button>
                    </div>
                  </div>
                </div>
                <div class="mt-2 sm:mt-0 w-full">
                  <textarea rows="8"
                            data-text-block-target="textarea"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-oceanside-500 focus:border-oceanside-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-oceanside-500 dark:focus:border-oceanside-500"
                            id="en_text_block_contents<%= en_block.id %>"
                            spellcheck="false"><%= en_block.contents %></textarea>
                </div>
              </div>
            </div>

            <div class="mt-3 grid grid-flow-col justify-items-end">
              <div class="flex space-x-2">
                <button type="button"
                        data-controller="merge-blocks tooltip"
                        data-merge-blocks-url-value="<%= merge_admin_text_block_path(id: en_block.id) %>"
                        data-merge-blocks-redirect-url-value="<%= edit_multiple_admin_text_blocks_path(collection_id: @collection.id, order_number: order_number) %>"
                        data-action="click->merge-blocks#submit"
                        data-tooltip-target="cell"
                        data-tooltip-placement-value="top"
                        class="inline-flex justify-center bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M 17.25 8.25 L 21 12 m 0 0 l -3.75 3.75 M 17 12 C 9 12 15 6 7 6 M 17 12 C 9 12 15 18 7 18 M 21 12 L 17 12 M 7 6 L 3 6 M 7 18 L 3 18" />
                  </svg>
                  <%= render 'admin/shared/tooltip', text: 'ზედა და ქვედა ბლოკის ერთში გაერთიანება' %>
                </button>
                <button type="button"
                        data-controller="swap-blocks tooltip"
                        data-swap-blocks-url-value="<%= swap_admin_text_block_path(id: en_block.id) %>"
                        data-swap-blocks-redirect-url-value="<%= edit_multiple_admin_text_blocks_path(collection_id: @collection.id, order_number: order_number) %>"
                        data-action="click->swap-blocks#submit"
                        data-tooltip-target="cell"
                        data-tooltip-placement-value="top"
                        class="inline-flex justify-center bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5 7.5 3m0 0L12 7.5M7.5 3v13.5m13.5 0L16.5 21m0 0L12 16.5m4.5 4.5V7.5" />
                  </svg>
                  <%= render 'admin/shared/tooltip', text: 'ზედა და ქვედა ბლოკის ადგილების გაცვლა' %>
                </button>
                <button type="button"
                        data-controller="add-block tooltip"
                        data-add-block-url-value="<%= admin_text_blocks_path(last_text_block_id: en_block.id) %>"
                        data-add-block-redirect-url-value="<%= edit_multiple_admin_text_blocks_path(collection_id: @collection.id, order_number: order_number) %>"
                        data-action="click->add-block#submit"
                        data-tooltip-target="cell"
                        data-tooltip-placement-value="top"
                        class="inline-flex justify-center bg-gray-50 text-gray-700 rounded-md ring-1 ring-gray-300 p-1 hover:ring-2 hover:ring-oceanside-500 hover:bg-white hover:text-gray-900">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                  </svg>
                  <%= render 'admin/shared/tooltip', text: 'ახალი ბლოკის დამატება' %>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    </div>

    <%= render 'admin/shared/confirm_delete_modal', modal_title: 'გსურთ ტექსტური ბლოკის წაშლა?',
                                                    modal_text: 'ეს ტექტური ბლოკი წაიშლება სრულად' %>

  </div>
</main>
