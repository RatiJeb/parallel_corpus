<% if index % 2 == 0 %>
  <tr class="bg-white">
<% else %>
  <tr class="bg-gray-50">
<% end %>
  <% if columns[:uid].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r border-l text-sm font-medium text-gray-900 py-4 px-3">
      <span class="highlightable">
        <%= record.id %>
      </span>
      <%= render 'admin/shared/tooltip', text: record.id, highlightable: true %>
    </td>
  <% end %>

  <% if columns[:supergroup_name_ka].present? || columns[:supergroup_name_en].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 pr-3">
      <%= link_to admin_groups_path(locale: I18n.locale, supergroup_id: record.supergroup_id), class: "hover:text-mountbatten-700 hover:font-semibold w-full text-gray-700 border-transparent hover:text-gray-900 py-5 px-3" do %>
        <span class="highlightable">
          <%= record.send("supergroup_name_#{I18n.locale}") %>
        </span>
      <% end %>
      <%= render 'admin/shared/tooltip', text: record.send("supergroup_name_#{I18n.locale}"), highlightable: true %>
    </td>
  <% end %>

  <% if columns[:group_name_ka].present? || columns[:group_name_en].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 pr-3">
      <%= link_to admin_collections_path(locale: I18n.locale, group_id: record.group_id), class: "hover:text-mountbatten-700 hover:font-semibold w-full text-gray-700 border-transparent hover:text-gray-900 py-5 px-3" do %>
        <span class="highlightable">
          <%= record.send("group_name_#{I18n.locale}") %>
        </span>
      <% end %>
      <%= render 'admin/shared/tooltip', text: record.send("group_name_#{I18n.locale}"), highlightable: true %>
    </td>
  <% end %>

  <% if columns[:name_ka].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 pr-3">
      <%= link_to columns[:enter_url_method].call(**columns[:enter_url_params]), class: "hover:text-mountbatten-700 hover:font-semibold w-full text-gray-700 border-transparent hover:text-gray-900 py-5 px-3" do %>
        <span class="highlightable">
          <%= record.name_ka %>
        </span>
      <% end %>
      <%= render 'admin/shared/tooltip', text: record.name_ka, highlightable: true %>
    </td>
  <% end %>

  <% if columns[:name_en].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 pr-3">
      <%= link_to columns[:enter_url_method].call(**columns[:enter_url_params]), class: "hover:text-mountbatten-700 hover:font-semibold w-full text-gray-700 border-transparent hover:text-gray-900 py-5 px-3" do %>
        <span class="highlightable">
          <%= record.name_en %>
        </span>
      <% end %>
      <%= render 'admin/shared/tooltip', text: record.name_en, highlightable: true %>
    </td>
  <% end %>

  <% if columns[:status].present? %>
    <td class="relative truncate z-0 border-b border-r text-sm text-gray-500 py-4 px-3">
      <%= record.status %>
    </td>
  <% end %>

  <% if columns[:groups_count].present? %>
    <td class="relative truncate z-0 border-b border-r text-sm text-gray-500 py-4 px-3">
      <%= record.groups_count %>
    </td>
  <% end %>

  <% if columns[:collections_count].present? %>
    <td class="relative truncate z-0 border-b border-r text-sm text-gray-500 py-4 px-3">
      <%= record.collections_count %>
    </td>
  <% end %>

  <% if columns[:text_blocks_count].present? %>
    <td class="relative truncate z-0 border-b border-r text-sm text-gray-500 py-4 px-3">
      <%= record.text_blocks_count %>
    </td>
  <% end %>

  <td class="relative whitespace-nowrap overflow-hidden z-0 border-b border-r text-sm font-medium text-gray-500 max-w-[60px] px-2">

    <div class="flex justify-between items-center grid grid-flow-col">

      <% if columns[:edit].present? %>
        <%= link_to columns[:edit_url_method].call(**columns[:edit_url_params]), class: "inline-flex text-gray-700 hover:text-oceanside-500 hover:ring-2 hover:ring-oceanside-500 hover:rounded-3xl px-2 py-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
          </svg>
        <% end %>
      <% end %>

      <% if columns[:enter].present? %>
        <%= link_to columns[:enter_url_method].call(**columns[:enter_url_params]), class: "inline-flex text-gray-700 hover:text-oceanside-500 hover:ring-2 hover:ring-oceanside-500 hover:rounded-3xl px-2 py-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>
        <% end %>
      <% end %>

    </div>

  </td>
</tr>
