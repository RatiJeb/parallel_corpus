<div id="confirm-delete-modal" tabindex="-1" aria-hidden="true" class="invisible overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div id="confirm-delete-modal-inner" class="relative p-4 w-full max-w-lg max-h-full">
    <div class="relative bg-gray-50 rounded-lg shadow-xl dark:bg-gray-700">
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 id="confirm-delete-modal-title" class="text-xl font-semibold text-gray-900 dark:text-white">
          <%= modal_title %>
        </h3>
        <button type="button" id="confirm-delete-modal-close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="default-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5 space-y-4">
        <p id="confirm-delete-modal-text" class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
          <%= modal_text %>
        </p>
        <div class="flex grid grid-flow-col space-x-2 items-center justify-start">
          <div class="inline-flex">
            <input type="checkbox" id="confirm-delete-modal-checkbox" class="bg-gray-50 border border-gray-300 w-6 h-6 text-gray-900 text-sm text-mountbatten-500 rounded-md focus:ring-offset-0 focus:ring-1 focus:ring-oceanside-500 focus:border-oceanside-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-oceanside-500">
          </div>
          <div class="inline-flex">
            <label>
              <%= t('delete_modal.agree') %>
            </label>
          </div>
        </div>
      </div>
            <!-- Modal footer -->
      <div class="flex items-center justify-between p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
        <button id="confirm-delete-modal-delete-button" data-modal-hide="default-modal" type="button" class="w-full text-white font-semibold bg-gray-500 hover:bg-gray-400 focus:ring-4 focus:outline-none focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center"><%= t('delete_modal.delete') %></button>
        <button id="confirm-delete-modal-cancel-button" data-modal-hide="default-modal" type="button" class="w-full font-semibold py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:border-gray-300 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"><%= t('delete_modal.cancel') %></button>
      </div>
    </div>
  </div>
</div>
